@model  List<AdressSummary>

@{ 
    ViewBag.Title = "Adress";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <form asp-action="Adress" method="post">
        @for (int i = 0; i < 3; i++)
        {
            <fieldset class="form-group">
                <legend>Adress @(i + 1)</legend>
                <div class="form-group">
                    <label>City:</label>
                    <input name="[@i].City" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Country:</label>
                    <input name="[@i].Country" class="form-control" />
                </div>
            </fieldset>
        }
        <button type="submit" class="btn btn-primary">Засабмитить</button>
    </form>
}
else
{
    <table class="table table-sm table-bordered table-striped">
        <tr>
            <th>
                City
            </th>
            <th>
                Country
            </th>
        </tr>
        @foreach (var adress in Model)
	    {
		    <tr>
                <td>
                    @adress.City
                </td>
                <td>
                    @adress.Country
                </td>
            </tr>
	    }
    </table>
    <a asp-action="Adress" class="btn btn-secondary">Назад</a>
}