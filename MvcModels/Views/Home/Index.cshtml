@model Person

@{ 
    Layout = "_Layout";
}

<div class="bg-primary m-1 p-1 text-white">
    <h2>Person</h2>
</div>

<table class="table table-sm table-bordered table-striped">
    <tr>
        <th>
            PersonId:
        </th>
        <td>
            @Model.PersonId
        </td>
    </tr>
    <tr>
        <th>
            FirstName:
        </th>
        <td>
            @Model.FirstName
        </td>
    </tr>
    <tr>
        <th>
            LastName:
        </th>
        <td>
            @Model.LastName
        </td>
    </tr>
    <tr>
        <th>
            PersonRole:
        </th>
        <td>
            @Model.PersonRole
        </td>
    </tr>
    <tr>
        <th>
            City:
        </th>
        <td>
            @Model.HomeAdress?.City
        </td>
    </tr>
    <tr>
        <th>
            Country:
        </th>
        <td>
            @Model.HomeAdress?.Country
        </td>
    </tr>
</table>